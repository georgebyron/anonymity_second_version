//NOTATKI

//from http://beski.wordpress.com/2009/04/21/scroll-effect-with-local-anchors-jquery/
$(".scroll").click(function(event){
    event.preventDefault();
    var offset = $($(this).attr('href')).offset();
    $('html, body').animate({scrollTop:offset}, 500);
  });


/*$(".scroll").click(function(event){

