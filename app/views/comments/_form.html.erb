
<div class="comment_form_block">
	<div class="comment_form">
<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> z kilku powodów komentarz nie może zostać zapisany:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="comment_field_left">
  <div class="field">
    <%= f.label "imię:" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
</div>
<div class="comment_field_right">
  <div class="field">
    <%= f.label "treść:" %><br />
    <%= f.text_area :content %>
  </div>
   <div class="actions">
    <%= f.submit "edytuj" %>
  </div>
</div>
<% end %>
	</div>
</div>
